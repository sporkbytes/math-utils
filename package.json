{
  "name": "@sporkbytes/math-utils",
  "version": "1.1.1",
  "description": "Utility functions used to perform basic math.",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "umdModule": "dist/index.umd.js",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "rm -rf ./dist && rollup -c",
    "docs": "rm -rf ./docs && jsdoc src/index.js -d ./docs",
    "prepare": "npm run build",
    "start": "rollup -c -w",
    "test": "NODE_ENV=test jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sporkbytes/math-utils.git"
  },
  "keywords": [
    "math",
    "percent",
    "percentage",
    "decimals",
    "rounding",
    "precision",
    "currency"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sporkbytes/math-utils/issues"
  },
  "homepage": "https://github.com/sporkbytes/math-utils#readme",
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "babel-jest": "^24.7.1",
    "jest": "^24.7.1",
    "jsdoc": "^3.5.5",
    "rollup": "^1.10.1",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-cleanup": "^3.1.1"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/index.js",
      "!**/node_modules/**"
    ]
  },
  "engines": {
    "node": "12.2.0",
    "npm": "6.9.0"
  }
}
